<% layout('layout/boilerplate') -%>
<body>
    
        <div class="row">
            <h1 class="text-center">Edit Campground</h1>
            <div class="col-6 offset-3">
                <form action="/campgrounds/<%= foundCamp._id %>?_method=PATCH", method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="title" value="<%= foundCamp.title %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="location" value="<%= foundCamp.location %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Image Url</label>
                        <input class="form-control" type="text" id="image" name="image" value="<%= foundCamp.image %>" required> 
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                                aria-describedby="price-label" name="price" value="<%= foundCamp.price %>" required>
                        
                            <div class="invalid-feedback">
                                You must enter this.
                            </div>
        
                        </div>
               

                    </div>
        
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="description" required><%= foundCamp.description  %></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Save Changes</button>
                    </div>
                </form>
                <a href="/campgrounds">All Campgrounds</a>
            </div>
        </div>
    

    

</body>
