<% layout('layout/boilerplate') -%>

    <body>
        <h1>All Campgrounds</h1>


        <% for (let camp of camps) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="container-fluid" src="<%= camp.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%=camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= camp._id %>" < button type="button" class="btn btn-info">View <%=
                                camp.title %></button>

                        </a>
                    </div>
                </div>




            </div>

            <% } %>



                <div>
                    <a href="/campgrounds/new">Add New Campground</a>
                </div>
    </body>